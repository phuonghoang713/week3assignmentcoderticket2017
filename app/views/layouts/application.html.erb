<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <% if !current_user.present? %>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_session_path %>">Sign In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href=" <%= new_user_path %>">Sign Up</a>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign Out", sign_out_path, method:'delete', class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </nav>

    <%= flash_messages %>
    <%= yield %>
  

</body>
</html>
